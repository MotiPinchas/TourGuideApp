<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.tourguideapp.MainActivity">

    <TextView
        android:id="@+id/welcome_string_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/welcome_title"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/city_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/city_name"
        android:textAlignment="center"
        android:textSize="44sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/beaches_cat_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@color/category_Beaches"
            android:gravity="center"
            android:padding="4dp"
            android:text="Beaches"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/restaurant_cat_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/category_restaurants"
            android:gravity="center"
            android:padding="4dp"
            android:text="Restaurants"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/history_cat_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/category_history"
            android:gravity="center"
            android:padding="4dp"
            android:text="History"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/entertainment_cat_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/category_entertainment"
            android:gravity="center"
            android:padding="4dp"
            android:text="Entertainment"
            android:textAlignment="center"
            android:textSize="28sp" />


    </LinearLayout>


</LinearLayout>
